<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--************ CustomTitleBar ***********-->
    <declare-styleable name="CustomTitleBar">
        <attr name="titlebar_height" format="dimension"/>
        <attr name="titlebar_title_gravity" format="enum">
            <enum name="left_center" value="19" />
            <enum name="center" value="17" />
        </attr>
        <attr name="titlebar_elevation" format="dimension"/>
        <attr name="titlebar_show_divider" format="boolean" />
        <attr name="titlebar_divider_color" format="color" />
        <attr name="titlebar_divider_height" format="dimension" />
        <attr name="titlebar_bg_color" format="color" />
        <attr name="titlebar_left_back_drawable_id" format="reference" />

        <attr name="titlebar_title" format="string"/>
        <attr name="titlebar_title_bold" format="boolean"/>
        <attr name="titlebar_title_letter_spacing" format="float" />
        <attr name="titlebar_title_text_size" format="dimension" />
        <attr name="titlebar_title_text_size_with_subtitle" format="dimension" />
        <attr name="titlebar_subtitle_text_size" format="dimension" />
        <attr name="titlebar_title_color" format="color" />
        <attr name="titlebar_subtitle_color" format="color" />
        <attr name="titlebar_title_margin_horizontal_when_no_btn_aside" format="dimension" />
        <attr name="titlebar_title_container_padding_horizontal" format="dimension" />
        <attr name="titlebar_image_btn_width" format="dimension" />
        <attr name="titlebar_image_btn_height" format="dimension" />
        <attr name="titlebar_image_btn_padding_horizontal" format="dimension" />
        <attr name="titlebar_text_btn_padding_horizontal" format="dimension" />
        <attr name="titlebar_text_btn_color_state_list" format="reference" />
        <attr name="titlebar_text_btn_text_size" format="dimension" />

        <attr name="titlebar_image_btn_scaleType" format="enum" >
            <enum name="fit_xy" value="1" />
            <enum name="fit_start" value="2" />
            <enum name="fit_center" value="3" />
            <enum name="fit_end" value="4" />
            <enum name="center" value="5" />
            <enum name="center_crop" value="6" />
            <enum name="center_inside" value="7" />
        </attr>

    </declare-styleable>
    <attr name="CustomTitleBarStyle" format="reference" />

</resources>